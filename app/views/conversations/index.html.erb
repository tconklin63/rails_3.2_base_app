<%= render 'courses/courses_menu', :highlight => 'messages'%>

<h1> Messages </h1>

<div class="container-fluid">
	<%= link_to 'Create Message', :new_conversation, :class => 'btn btn-primary' %>
  <div class="row-fluid">
    <div class="span12">
      <h3>Inbox</h3>
      
      <%= render mailbox.inbox %>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <h3>Sent Messages</h3>
      <%= render mailbox.sentbox %>
    </div>
  </div>
  
  <div class="row-fluid">
    <div class="span12">
      <h3>Trash</h3>
      <%= render mailbox.trash %>
    </div>
  </div>


</div>
