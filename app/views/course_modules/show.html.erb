
<div class="container">
  <div class="row-fluid">
    <div class="span10" style="margin:0 auto;float:none;">
      <div class="row-fluid">
        <div class="span12">
          <p id="notice"><%= notice %></p>
          
          <h3 style="float:left;"><%= @course.name + " - " + @course_module.name %></h3>
          
          <div style="float:right;">
            <a href="#" class="btn btn-small btn-primary"><i class="icon-backward icon-white"></i>Previous</a>
            <a href="#" class="btn btn-small btn-primary"><i class="icon-list icon-white"></i>Summary</a>
            <a href="#" class="btn btn-small btn-primary">Next<i class="icon-forward icon-white"></i></a>
          </div>
        </div>
      </div>
      
      <div class="row-fluid" style="">
        <div class="span8" style="min-width:580px">
          <div class="video_wrapper">
            <div id="videoPage">
              <video width="580" height="435" class="jwplayer" src="<%=@course_module.file %>" id="container"></video>
            </div>
          </div>
        </div>
        <div class="span4">
          <p>
            <%= @course_module.summary %>
          </p>
        </div>
      </div>    
    </div>
  </div>
      
      
      <%= javascript_tag do %>
        window.video_id = "<%= params[:id]%>";
      <% end %>
</div>
