<% if !signed_in? %>
<div class="container home">
  <div class="row-fluid">
    <div class="span8 hero-unit">
      <h3>
        The easiest way to take courses
      </h3>
      <ul>
        <li>Access training online, anytime via a web browser!</li>
        <li>Search for courses by industry</li>
        <li>Create and sell courses online</li>
        <li>There's no long term contract or setup fee</li>
      </ul>
    </div>
    
    <div class="span4 hero-unit">
      <h3>
        Sign in
      </h3>
      <%= form_tag new_user_session_path, :class => 'form-horizontal signin' do %>
        <div class="control-group">
          <div class="controls">
            <%= text_field_tag 'user[email]', "", :placeholder => 'email' %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <%= password_field_tag 'user[password]', "",   :placeholder => 'password' %>
          </div>    
        </div>
        <div class="control-group">
          <div class="controls">
            <%=  submit_tag 'Login', :class => 'btn' %>
          </div>
          <div class="services">
            <a href="/auth/facebook" title="Sign in with Facebook" class="services"><%= image_tag "facebook_32.png", :size => "32x32",  :alt => "Facebook" %>Facebook</a>
            <a href="/auth/linkedin" title="Sign in with Linked In" class="services"><%= image_tag "linkedin_32.png", :size => "32x32",  :alt => "Linked In" %>Linked In</a><br/>
          </div>
        </div>
  <% end %>
    </div>
      
    </div>
    <div class="row-fluid">
      <div class="span12 hero-unit">
    <h2>Welcome to Social University</h2>

    <p>
      Here you are able to take and create courses easily. Its a revolutionizing way to take courses. It will help you get the job you have always wanted!
    </p>

    <%= link_to "Sign up now!", new_user_registration_path, 
                                class: "btn btn-large" %>
 
    </div>
      
  </div>
</div>
<% end %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>

    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>

  </div>  
<% end %>
