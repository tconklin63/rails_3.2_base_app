<h2><%= @course.name %></h2>

<div class="tab-container course-class">
    <div class="subnav">
        <ul class="tabs">
            <li class="tab-header classes-tab selected">
              <span>
                <%= link_to 'Courses', manage_courses_path %>
              </span>
            </li>
        </ul>
        <span class="tab-bg"></span>
      </div>
      <div class="metadata-container">
      	<br/>
        <ul class="modules">
          <% 
          if @course_modules.empty? 
            %>
              You have no course classes, you must create a course class before you can view it's statistics.
            <%
          end
          @course_modules.each_with_index do |course_modules, index| %>
            <li>
              <div class="part">
                Part <%= index + 1 %>
              </div>
              <div class="summary">
                <div class="title">
                  <%= course_modules.name %> (<%= course_modules.class_type %>) - <%= link_to 'View Statistics', statistic_path(@course, course_modules) %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>

      </div>
</div>

