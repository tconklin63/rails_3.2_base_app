<div class="container-fluid">

<%= form_for @topic do |f| %>
  <%= f.error_messages %>
  <% if params[:forum_id] %>
	<input type="hidden" id="topic_forum_id" name="topic[forum_id]" value="<%= params[:forum_id] %>" />
  <% end %>
  
	<div class="row-fluid">
	  <div class="span6">
    		<%= f.label :name %><br />
    		<%= f.text_field :name, :class=>'input-full' %>
  		
		<%= f.label :description %><br />
    		<%= f.text_area :description, :class=>'input-full' %>

		</br>
		<div>
			<%= f.submit :class => "btn btn-primary"%>
		</div>
  	  </div>
	</div>

  
<% end %>

</div>
